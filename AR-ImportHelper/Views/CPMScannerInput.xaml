<Window x:Class="AR_ImportHelper.Views.CPMScannerInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AR_ImportHelper.Views"
        mc:Ignorable="d"
        Title="CPMScannerInput" Height="180" Width="508">
    <Grid>
        <Grid>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5" Height="35">
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
                <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
            </StackPanel>
            <Label Content="Crystal Scanner Directory:" HorizontalAlignment="Left" Margin="10,69,0,0" Height="24" VerticalAlignment="Top" />
            <Label Content="Room Name:" HorizontalAlignment="Left" Margin="75,28,0,0" Height="24" VerticalAlignment="Top"/>
            <TextBox Text="" Name="RoomNameTextBox" HorizontalAlignment="Left" Margin="163,34,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="254"/>
            <TextBox Text="" Name="ScannerDirectoryTextBox" HorizontalAlignment="Left" Margin="163,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
            <Button Content="Button" HorizontalAlignment="Right" Margin="0,75,91,0" VerticalAlignment="Top" Height="18" Width="57" Click="OpenFolderButton_Click"/>
            <Label Visibility="Collapsed" Content="*" Name="RoomNameAsterisk" Foreground="Red" HorizontalAlignment="Left" Margin="145,66,0,0" Height="24" VerticalAlignment="Top" />
            <Label Visibility="Collapsed" Content="*" Name="ScannerDirAsterisk" Foreground="Red" HorizontalAlignment="Left" Margin="145,25,0,0" Height="24" VerticalAlignment="Top" />
        </Grid>
    </Grid>
</Window>
